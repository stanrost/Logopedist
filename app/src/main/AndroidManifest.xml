                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".controller.activities.AddPatientActivity" android:label="Patiënt toevoegen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

